package com.company;
public class Main {

    public static void main(String[] args) {
       int number = 1255;
        System.out.println(SumDigits(number));



    }

    public static int SumDigits(int number){
        int sum = 0;

        while(number != 0){
            sum+=number%10;
            number = number/10;

        }
        return sum;


    }


}
